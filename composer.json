{
    "name": "sharkodlak/owl",
    "description": "Ovulation tracking App.",
    "keywords": [
        "ovulation",
        "menses",
        "calendar",
        "tracker"
    ],
    "homepage": "http://github.com/sharkodlak/owl",
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "league/openapi-psr7-validator": "^0.22.0",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "php-di/php-di": "^7.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "slim/slim": "^4.12",
        "spaze/phpstan-disallowed-calls": "^3.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.0",
        "slevomat/coding-standard": "^8.14",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "cmd:fix": "@cmd:phpcbf",
        "cmd:lint": "@php vendor/bin/parallel-lint -e php src tests",
        "cmd:phpcs": "@php vendor/bin/phpcs -s",
        "cmd:phpcbf": "@php vendor/bin/phpcbf",
        "cmd:phpstan": "@php vendor/bin/phpstan analyse",
        "cmd:phpstan-baseline": "@cmd:phpstan --generate-baseline",
        "cmd:phpstan-tests": "@cmd:phpstan tests --configuration app/tests/phpstan.neon",
        "cmd:tests": [
            "@cmd:tests:unit",
            "@cmd:tests:integration"
        ],
        "cmd:tests:unit": "@php vendor/bin/phpunit --testsuite unit",
        "cmd:tests:integration": "@php vendor/bin/phpunit --testsuite integration",
        "cmd:qa": [
            "@cmd:lint",
            "@cmd:phpcs",
            "@cmd:phpstan",
            "@cmd:tests"
        ]
    }
}
